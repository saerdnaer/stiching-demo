{
  "name": "stiching-demo",
  "version": "0.2.0",
  "private": true,
  "dependencies": {
    "@graphql-inspector/cli": "2.6.1",
    "@graphql-inspector/config": "2.6.1",
    "@graphql-tools/delegate": "8.0.3",
    "@graphql-tools/load": "7.0.1",
    "@graphql-tools/merge": "6.2.16",
    "@graphql-tools/stitch": "8.0.3",
    "@graphql-tools/url-loader": "7.0.3",
    "@graphql-tools/utils": "8.0.1",
    "@graphql-tools/wrap": "8.0.3",
    "apollo-link": "^1.2.14",
    "apollo-link-context": "^1.0.20",
    "apollo-link-http": "^1.5.17",
    "apollo-server": "^3.1.1",
    "apollo-server-cache-redis": "^3.0.3",
    "apollo-server-caching": "^3.0.1",
    "apollo-server-express": "^3.1.1",
    "apollo-server-module-graphiql": "^1.4.0",
    "babel-eslint": "^10.1.0",
    "config": "^3.3.6",
    "cors": "^2.8.5",
    "cross-fetch": "^3.1.4",
    "express": "^4.17.1",
    "graphql": "^15.5.1",
    "graphql-tag": "^2.12.5",
    "node-fetch": "^2.6.1",
    "nodemon": "^2.0.12",
    "subscriptions-transport-ws": "^0.9.19",
    "ts-node": "^10.1.0",
    "tslib": "^2.3.0"
  },
  "scripts": {
    "start": "if test \"$NODE_ENV\" = \"production\" ; then yarn run start:production ; else yarn run start:development ; fi",
    "start:development": "nodemon --config nodemon.json",
    "start:production": "node dist/index.js",
    "build": "yarn build:clean && yarn build:transpile",
    "build:clean": "rm -rf .dist/*",
    "build:transpile": "tsc",
    "test": "yarn test:lint && yarn test:unit",
    "test:lint": "node ./node_modules/eslint/bin/eslint.js --no-error-on-unmatched-pattern ./src/*",
    "test:unit": "NODE_ENV=test jest --env=jsdom --coverage",
    "test:unit:watch": "NODE_ENV=test jest --env=jsdom --watch",
    "graphql:save": "graphql-inspector introspect http://localhost:5000/graphql --write schema.graphql"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn graphql:save && git add schema.graphql"
    }
  },
  "devDependencies": {
    "@types/config": "^0.0.39",
    "@types/express": "^4.17.13",
    "@types/express-serve-static-core": "^4.17.24",
    "@types/ioredis": "^4.26.6",
    "@types/node": "^14.17.6",
    "@typescript-eslint/eslint-plugin": "^4.28.5",
    "@typescript-eslint/parser": "^4.28.5",
    "eslint": "^7.31.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-graphql": "^4.0.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-prettier": "^3.4.0",
    "prettier": "^2.3.2",
    "typescript": "^4.3.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/.jest-ts-processor.js"
    },
    "testMatch": [
      "**/*.test.ts"
    ]
  }
}