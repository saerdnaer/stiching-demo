{
  "name": "stiching-demo",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@graphql-inspector/cli": "^2.2.0",
    "@graphql-inspector/config": "2.2.0",
    "@graphql-tools/delegate": "^6.0.18",
    "@graphql-tools/load": "^6.0.18",
    "@graphql-tools/merge": "^6.0.18",
    "@graphql-tools/stitch": "^6.0.18",
    "@graphql-tools/url-loader": "^6.0.18",
    "@graphql-tools/utils": "^6.0.18",
    "@graphql-tools/wrap": "^6.0.18",
    "apollo-cache-control": "^0.11.1",
    "apollo-link": "^1.2.14",
    "apollo-link-context": "^1.0.20",
    "apollo-link-http": "^1.5.17",
    "apollo-server": "^2.16.1",
    "apollo-server-cache-redis": "^1.2.2",
    "apollo-server-caching": "^0.5.2",
    "apollo-server-express": "^2.16.1",
    "apollo-server-module-graphiql": "^1.4.0",
    "babel-eslint": "^10.1.0",
    "config": "^3.3.1",
    "cors": "^2.8.5",
    "cross-fetch": "^3.0.5",
    "express": "^4.17.1",
    "graphql": "^15.3.0",
    "graphql-tag": "^2.11.0",
    "node-fetch": "^2.6.0",
    "nodemon": "^2.0.4",
    "subscriptions-transport-ws": "^0.9.18",
    "ts-node": "^8.10.2",
    "tslib": "^2.0.1"
  },
  "scripts": {
    "start": "if test \"$NODE_ENV\" = \"production\" ; then yarn run start:production ; else yarn run start:development ; fi",
    "start:development": "nodemon --config nodemon.json",
    "start:production": "node dist/index.js",
    "build": "yarn build:clean && yarn build:transpile",
    "build:clean": "rm -rf .dist/*",
    "build:transpile": "tsc",
    "test": "yarn test:lint && yarn test:unit",
    "test:lint": "node ./node_modules/eslint/bin/eslint.js --no-error-on-unmatched-pattern ./src/*",
    "test:unit": "NODE_ENV=test jest --env=jsdom --coverage",
    "test:unit:watch": "NODE_ENV=test jest --env=jsdom --watch",
    "graphql:save": "graphql-inspector introspect http://localhost:5000/graphql --write schema.graphql"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn graphql:save && git add schema.graphql"
    }
  },
  "devDependencies": {
    "@types/config": "^0.0.36",
    "@types/express": "^4.17.7",
    "@types/express-serve-static-core": "^4.17.9",
    "@types/ioredis": "^4.17.3",
    "@types/node": "^14.6.0",
    "@typescript-eslint/eslint-plugin": "^3.9.1",
    "@typescript-eslint/parser": "^3.9.1",
    "eslint": "^7.7.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-graphql": "^4.0.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-prettier": "^3.1.4",
    "prettier": "^2.0.5",
    "typescript": "^3.9.7"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/.jest-ts-processor.js"
    },
    "testMatch": [
      "**/*.test.ts"
    ]
  }
}
